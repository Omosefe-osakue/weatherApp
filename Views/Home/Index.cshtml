@{
    ViewData["Title"] = "Weather Forecast | Check Local Weather & Conditions";
    ViewData["Description"] = "Get accurate weather forecasts for any city worldwide. Check current conditions, temperature, humidity, wind speed and more.";
}

<!-- Toast Container -->
<div id="toastContainer" class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
    <!-- Toast messages will be inserted here by JavaScript -->
</div>

<!-- Hero Section -->
<section class="hero-section py-5 py-lg-7">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <h1 class="display-4 fw-bold mb-4">Check the Weather Anywhere, Anytime</h1>
                <p class="lead mb-4">Get accurate weather forecasts for any location around the world. Plan your day with confidence using our real-time weather data.</p>
                
                <div class="d-flex flex-wrap gap-3 mb-4">
                    <div class="d-flex align-items-center me-4">
                        <div class="icon-box bg-primary bg-opacity-10 text-primary rounded-circle p-2 me-2">
                            <i class="fas fa-sun"></i>
                        </div>
                        <span>Real-time Updates</span>
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="icon-box bg-success bg-opacity-10 text-success rounded-circle p-2 me-2">
                            <i class="fas fa-globe"></i>
                        </div>
                        <span>Global Coverage</span>
                    </div>
                </div>
                
                <div class="search-box bg-white p-4 rounded-3 shadow-sm">
                    <h5 class="mb-3 fw-semibold">Check Weather Now</h5>
                    <form id="weatherForm" asp-controller="Weather" asp-action="Index" method="get" class="needs-validation" novalidate>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0">
                                <i class="fas fa-map-marker-alt text-muted"></i>
                            </span>
                            <input type="text" 
                                   class="form-control form-control-lg" 
                                   id="city" 
                                   name="city" 
                                   placeholder="Enter city name" 
                                   required
                                   autocomplete="off">
                            <button class="btn btn-primary btn-lg px-4" type="submit">
                                <i class="fas fa-search me-2"></i>Search
                            </button>
                        </div>
                    </form>
                    
                    <div class="mt-3">
                        <p class="text-muted small mb-2">Popular Cities:</p>
                        <div class="d-flex flex-wrap gap-2">
                            <a href="#" class="quick-city btn btn-sm btn-outline-primary" data-city="London">London</a>
                            <a href="#" class="quick-city btn btn-sm btn-outline-primary" data-city="New York">New York</a>
                            <a href="#" class="quick-city btn btn-sm btn-outline-primary" data-city="Tokyo">Tokyo</a>
                            <a href="#" class="quick-city btn btn-sm btn-outline-primary" data-city="Paris">Paris</a>
                            <a href="#" class="quick-city btn btn-sm btn-outline-primary" data-city="Sydney">Sydney</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="weather-illustration text-center">
                    <img src="https://img.icons8.com/clouds/500/000000/cloudy-day--v2.png" 
                         alt="Weather illustration" 
                         class="img-fluid"
                         style="max-width: 80%; height: auto;">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold mb-3">Why Choose Our Weather App?</h2>
            <p class="text-muted lead">Get the most accurate and up-to-date weather information</p>
        </div>
        
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm p-4">
                    <div class="icon-box bg-primary bg-opacity-10 text-primary d-inline-flex rounded-circle p-3 mb-3">
                        <i class="fas fa-bolt fa-2x"></i>
                    </div>
                    <h4 class="h5 fw-bold mb-3">Real-time Data</h4>
                    <p class="text-muted mb-0">Get the latest weather updates with our real-time data processing.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm p-4">
                    <div class="icon-box bg-success bg-opacity-10 text-success d-inline-flex rounded-circle p-3 mb-3">
                        <i class="fas fa-mobile-alt fa-2x"></i>
                    </div>
                    <h4 class="h5 fw-bold mb-3">Responsive Design</h4>
                    <p class="text-muted mb-0">Works perfectly on all devices, from mobile phones to desktops.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm p-4">
                    <div class="icon-box bg-info bg-opacity-10 text-info d-inline-flex rounded-circle p-3 mb-3">
                        <i class="fas fa-chart-line fa-2x"></i>
                    </div>
                    <h4 class="h5 fw-bold mb-3">Detailed Forecasts</h4>
